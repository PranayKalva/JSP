<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>firstJSPProject</display-name>
  <welcome-file-list>
  <welcome-file>simpleForm.html</welcome-file>
  </welcome-file-list>
  <servlet>
   <servlet-name>FirstJSP</servlet-name>
  <servlet-class>firstJSPProject.FirstJSP</servlet-class>
    <init-param>
  <param-name>user</param-name>
  <param-value>Pranay Kalva</param-value>
  </init-param>
  </servlet>
  <servlet-mapping>
  <servlet-name>FirstJSP</servlet-name>
  <url-pattern>/FirstJSP/ServletPath</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>ServletProgram</servlet-name>
  <servlet-class>firstJSPProject.ServletProgram</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>ServletProgram</servlet-name>
  <url-pattern>/ServletProgram</url-pattern>
  </servlet-mapping>
    <servlet>
  <servlet-name>JSPFile</servlet-name>
  <jsp-file>/SimpleJSPFile.jsp</jsp-file>
  <init-param>
  <param-name>defaultUser</param-name>
  <param-value>Pranay</param-value>
  </init-param>
  </servlet>
  <servlet-mapping>
  <servlet-name>JSPFile</servlet-name>
  <url-pattern>/SimpleJSPFile.jsp</url-pattern>
  </servlet-mapping>
</web-app>